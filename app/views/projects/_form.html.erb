<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>
  <!-- Project form -->
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :client %>
    <%= f.input :manager %>
    <%= f.input :description %>
    <%= f.input :status %>
    <%= f.input :ship_date %>
  </div>

  <!-- Tasks form -->
  <h1>Tasks</h1>
  <%= f.simple_fields_for :tasks do |task| %>
    <%= render 'task_fields', f: task %>
  <% end %>

  <div class="links">
    <%= link_to_add_association 'Add Task', f, :tasks %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>